/* pages/order/refunds/refunds.wxss */
.tag{
  width: 100%;
  height: 80rpx;
  border-top:1rpx solid #F2F2F2;
  border-bottom: 1rpx solid #F2F2F2;
  display: flex;
  background: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
}
.tag view{
  width: 20%;
  text-align: center;
  height: 75rpx;
  color: #ccc;
}
.tag .active{
  border-bottom: 6rpx solid #000;
  color:#000;
}
.none{
  width: 100%;
  height: 100%;
  display: flex;
  align-items:center;
}
.none text{
  margin: -100rpx auto 0;
  font-size: 28rpx;
  color: #ccc;
}
.product-list{
  background: #fff;
}
.product-items{
  width: 100%;
  height: 330rpx;
  padding-bottom: 10rpx;
  border-bottom: 5rpx solid #f5f5f5;
}
.product-items image{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin:25rpx 0 0 20rpx;
}
.product-items text{
  float: left;
  font-size: 30rpx;
  margin:30rpx 30rpx 0; 
}
.product-items .item-title{
  width: 460rpx;
}
.product-items .price{
  color: #FF8247;
}
.product-items .num{
  margin-left: -5rpx;
  color: #ccc;
}
.product-items .pay{
  width: 460rpx;
  text-align: right;
}
.return text{
  float: right;
  width: 100rpx;
  height: 40rpx;
  border-radius: 5rpx;
  border:1rpx solid #FF8247;
  line-height: 40rpx;
  text-align: center;
  color:#FF8247;
  margin-left: 5rpx;
}
.return{
  width: 100%;
  text-align: right;
  float: right;
  height: 80rpx;
}